<p id="notice"><%= notice %></p>

<h1>Países</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Uf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.uf %></td>
        <td><%= link_to 'Visualizar', country %></td>
        <td><%= link_to 'Alterar', edit_country_path(country) %></td>
        <td><%= link_to 'Excluir', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo País', new_country_path %>
